#include <stdio.h>
#include <stdlib.h>

int main(){
	
	int n = 0, i = 0, g1 = 0, g2 = 0, ac = 0, r = 0, ini = 0, k = 0, Mini = 0, Mend = 0;
	
	while(1){
		scanf("%d", &n);
		
		if(!n)
			break;
		
		ac = 0;
		r = 0;
		ini = 0;
		Mini = 0;
		Mend = 0;
		
		for(i = 0; i < n; i++){
			scanf("%d %d", &g1, &g2);
			
			ac += g1 - g2;
			
			if(ac > r || (r == ac && Mend - ini <= i - ini)){
				r = ac;
				Mini = ini;
				Mend = i;
			}if(ac < 0){
				ini = i + 1;
				ac = 0;
			}
		}
		
		printf("Teste %d\n", ++k);
		
		if(r > 0)
			printf("%d %d", Mini + 1, Mend + 1);
		else
			printf("nenhum");
			
		printf("\n\n");
	}

	return 0;
}
